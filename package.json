{
  "name": "netlify-demo",
  "version": "0.0.0",
  "description": "A demo of Netlify",
  "scripts": {
    "dev": "npm-run-all --parallel mongodb netlify",
    "lint:css": "stylelint --allow-empty-input **/*.css",
    "lint:js": "eslint .",
    "lint": "npm run lint:js && npm run lint:css",
    "mongodb": "run-rs -k -v 4.4.1",
    "netlify": "netlify dev",
    "test": "jest --passWithNoTests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ucudal-wp/dev-env.git"
  },
  "author": "Mat√≠as Olivera <moliverafreire@gmail.com>",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/ucudal-wp/dev-env/issues"
  },
  "homepage": "https://github.com/ucudal-wp/dev-env#readme",
  "dependencies": {
    "bcrypt": "^5.0.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.10.6"
  },
  "devDependencies": {
    "eslint": "^7.2.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "husky": "^4.2.5",
    "jest": "^26.2.2",
    "jest-environment-node": "^26.3.0",
    "lint-staged": "^10.2.11",
    "mongodb-memory-server": "^6.8.0",
    "netlify-cli": "^2.59.3",
    "npm-run-all": "^4.1.5",
    "prettier": "2.0.5",
    "run-rs": "^0.6.2",
    "stylelint": "^13.6.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^20.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.css": "stylelint --fix",
    "*.{js,css,md}": "prettier --write"
  }
}
